extends ../layout

block content
    h3 Author
    a(href='/authors/add') Add New Author
    table
        thead
            tr
                th First
                th Last
                th CO Writer
                th DOB
                th

        tbody
            each author in authors
                tr
                    td= author.first_name
                    td= author.last_name
                    td= author.co_writer
                    td= author.dob
                    td

                        a(href=`/authors/profile/${book.id}`) View Author